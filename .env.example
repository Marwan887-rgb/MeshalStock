# إعدادات التطبيق - انسخ هذا الملف إلى .env وعدّل القيم

# إعدادات الخادم
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-to-random-string

# إعدادات الأمان
# كلمة المرور الافتراضية (يُنصح بتغييرها)
ADMIN_PASSWORD=admin123

# JWT Settings (لتوكن المصادقة)
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too

# إعدادات CORS - حدد النطاقات المسموح بها
# في الإنتاج، غيّر * إلى نطاقك المحدد
ALLOWED_ORIGINS=*

# إعدادات الخادم
HOST=0.0.0.0
PORT=5000

# معدل الطلبات (Rate Limiting)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# مدة صلاحية التوكن (بالساعات)
TOKEN_EXPIRY_HOURS=24
